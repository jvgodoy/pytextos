file = raw_input('Escribe el nombre del archivo: ') + '.txt'
try:
   #texto = open('dokusho.txt')
   texto = open(file)
   archivo = texto.read()

except:
   print('no se encuentra el archivo')
   quit()

texto = archivo.split()

#Terminaciones
for word in texto:
 	if word.endswith('idad') or word.endswith('idades') or word.endswith('mente') or word.endswith('cion') or word.endswith('ciones') or word.endswith('anza') or word.endswith('ancia') or word.endswith('ancias'):
 		print "Sustantivos: ", word

#Gerundios
nogerun = ["cuando", "mando", "segundo", "mundo"]
for word in texto:
	word = word.lower()
	if word not in nogerun:
 		if word.endswith('ndo'):
 			print "Gerundio: ", word
